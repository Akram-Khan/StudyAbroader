.container
	.row
		.four.columns
			- if current_user.avatar.url.present?
				= image_tag(current_user.avatar.thumb_medium.url)
			- else
				= image_tag("no-image.jpg")
		.one.columns
		.three.columns
			%ul
				%li
					%h5=current_user.username
				%strong
					%em="#{current_user.points} points"
				%li=current_user.studyAbroadStatus
				%li
					- if current_user.studyAbroadCountry.present?
						My study abroad country is
						%li 
							%strong=current_user.studyAbroadCountry
							=image_tag('flags/' + current_user.studyAbroadCountry.downcase + '.png')
		- if current_user.studyAbroadStatus.present?
			.two.columns
			.three.columns
				%strong why I study abroad
				%hr
				=current_user.whyIStudyAbroad

							